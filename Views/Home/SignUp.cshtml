@model DoAn3.Models.NguoiDung

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Đăng ký</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="login_part padding_top">
    <div class="container">
        <div class="row align-items-center">

            <div class="">
                <div class="login_part_form">
                    <div class="login_part_form_iner" style="border:solid 1px black">
                        <div class="" style="font-size:23px;margin-bottom:55px;text-align:center">
                            Để trải nhiệm nhiều hơn tính năng của cửa hàng
                            <br>
                            Hãy đăng ký tài khoản
                        </div>

                        @using (Html.BeginForm(new { @class = "row contact_form " }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal text-center m-auto">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-md-8 form-group p_star">
                                    Tên đăng nhập
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control"} })
                                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-8 form-group p_star">
                                    Mật khẩu
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-8 form-group p_star">
                                    Họ và tên
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.KhachHang.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.KhachHang.TenKH, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-8 form-group p_star">
                                    Số điện thoại
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.KhachHang.Sdt, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.KhachHang.Sdt, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-8 form-group p_star">
                                    Email
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.KhachHang.email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.KhachHang.email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-8 form-group p_star">
                                    Địa chỉ
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.KhachHang.Diachi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.KhachHang.Diachi, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-8 form-group">

                                    <button type="submit" class="btn_3 col-3" style="float:right;right:-150px">Đăng ký</button>

                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>